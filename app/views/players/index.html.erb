<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>

      <th>Scorepunctuality</th>
      <th>Scorefairplay</th>

      <th>Birth</th>
      <th>Gender</th>
      <th>Cellphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.scorepunctuality %></td>
        <td><%= player.scorefairplay %></td>
        <td><%= player.birth %></td>
        <td><%= player.gender %></td>
        <td><%= player.cellphone %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>

<%= will_paginate @players %>
