<p id="notice"><%= notice %></p>

<h1>Sport Interests</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sport_interests.each do |sport_interest| %>
      <tr>
        <td><%= link_to 'Show', sport_interest %></td>
        <td><%= link_to 'Edit', edit_sport_interest_path(sport_interest) %></td>
        <td><%= link_to 'Destroy', sport_interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sport Interest', new_sport_interest_path %>

<%= will_paginate @sport_interests %>
