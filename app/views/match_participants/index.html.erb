<p id="notice"><%= notice %></p>

<h1>Match Participants</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @match_participants.each do |match_participant| %>
      <tr>
        <td><%= link_to 'Show', match_participant %></td>
        <td><%= link_to 'Edit', edit_match_participant_path(match_participant) %></td>
        <td><%= link_to 'Destroy', match_participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match Participant', new_match_participant_path %>
<%= will_paginate @match_participants %>
